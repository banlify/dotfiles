# git clone https://github.com/denysdovhan/spaceship-prompt.git "$ZSH_CUSTOM/themes/spaceship-prompt" --depth=1
# ln -s "$ZSH_CUSTOM/themes/spaceship-prompt/spaceship.zsh-theme" "$ZSH_CUSTOM/themes/spaceship.zsh-theme"
ZSH_THEME="spaceship"

# git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions
# git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting
# git clone https://github.com/agkozak/zsh-z $ZSH_CUSTOM/plugins/zsh-z
plugins=(
  git
  zsh-autosuggestions
)

source $ZSH/oh-my-zsh.sh

# System
alias cls='clear'
alias ll='ls -g'
alias rf='rm -rf '
alias ..='cd ..'
alias sc='cd /Volumes/code'

alias .='codeAlias'

function codeAlias() {
  if [ $# -eq 0 ]; then
    # 如果没有参数，则执行 code ./
    command code ./
  elif [ $# -eq 1 ]; then
    # 如果只有一个参数，则执行 code $1
    command code "$1"
  else
    # 如果有多个参数，则输出错误信息
    echo "Usage: code [path]"
  fi
}


# Node
alias i='pnpm i --prefer-offline'
alias x='pnpx '
alias r='nr '
alias d='nr dev'
alias s='nr serve'
alias b='nr build'
alias ss='nr start'
alias un='nun '
alias id='ni -d '
alias ig='pnpm i -g '
alias re="nr release"
alias lint='nr lint'
alias lintf='nr lint --fix'

alias deps='pnpx taze minor -w'

# Git
alias gp='git push '
alias gc='git chechout '
alias gl='git pull --rebase'
alias gpf='git push --force'
alias gc='git clone '
alias gm='git add . && git commit -m "$1"'
alias branchs='git branch -a'
alias checkout='git checkout -b '

# SSH
alias sshgen='ssh-keygen -t ed25519 -C '
alias sshkey='cat ~/.ssh/id_ed25519.pub'
